# ===================================
# EXEMPLO DE ARQUIVO .env
# ===================================
# 
# INSTRUÇÕES: 
# 1. Crie um arquivo .env (SEM o .example) na raiz do projeto
# 2. Preencha com seus valores reais
# 3. NUNCA commite o arquivo .env no Git
# 4. SEMPRE adicione .env ao .gitignore
# 5. Compartilhe este .env.example com a equipe como template
#
# ===================================

# ===================================
# BANCO DE DADOS
# ===================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=seu_banco_de_dados
DB_USER=seu_usuario
DB_PASSWORD=sua_senha_super_secreta
DB_CONNECTION_STRING=postgresql://user:password@localhost:5432/database

# ===================================
# AWS
# ===================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=seu_access_key
AWS_SECRET_ACCESS_KEY=seu_secret_key
AWS_S3_BUCKET=seu_bucket_name

# ===================================
# GOOGLE CLOUD
# ===================================
GCP_PROJECT_ID=seu_project_id
GCP_SERVICE_ACCOUNT_KEY=seu_service_account_json
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# ===================================
# AZURE
# ===================================
AZURE_SUBSCRIPTION_ID=sua_subscription_id
AZURE_RESOURCE_GROUP=seu_resource_group
AZURE_STORAGE_ACCOUNT=sua_storage_account
AZURE_STORAGE_KEY=sua_storage_key

# ===================================
# API KEYS
# ===================================
API_KEY=sua_api_key_aqui
OPENAI_API_KEY=sua_openai_key
STRIPE_API_KEY=sua_stripe_key
STRIPE_SECRET_KEY=sua_stripe_secret
MAILCHIMP_API_KEY=sua_mailchimp_key

# ===================================
# AUTHENTICATION
# ===================================
JWT_SECRET=sua_jwt_secret_key
JWT_EXPIRATION=7d
SESSION_SECRET=sua_session_secret
OAUTH_CLIENT_ID=seu_oauth_client_id
OAUTH_CLIENT_SECRET=seu_oauth_client_secret

# ===================================
# GITHUB
# ===================================
GITHUB_TOKEN=seu_github_token
GITHUB_OAUTH_SECRET=seu_github_oauth_secret

# ===================================
# GITLAB
# ===================================
GITLAB_TOKEN=seu_gitlab_token
GITLAB_OAUTH_SECRET=seu_gitlab_oauth_secret

# ===================================
# KUBERNETES
# ===================================
KUBECONFIG=/path/to/kubeconfig
K8S_CLUSTER_URL=https://seu_cluster_url
K8S_API_TOKEN=seu_k8s_token

# ===================================
# TERRAFORM (para tfvars)
# ===================================
TF_VAR_aws_region=us-east-1
TF_VAR_database_password=sua_senha_db
TF_VAR_api_key=sua_api_key

# ===================================
# APLICAÇÃO
# ===================================
NODE_ENV=development
APP_ENV=development
APP_DEBUG=true
APP_NAME=seu_aplicativo
APP_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# ===================================
# EMAIL
# ===================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=seu_email@gmail.com
MAIL_PASS=sua_senha_email
MAIL_FROM=noreply@seu_dominio.com

# ===================================
# REDIS
# ===================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=sua_redis_password
REDIS_DB=0

# ===================================
# ELASTICSEARCH
# ===================================
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=sua_password

# ===================================
# SENTRY (Error Tracking)
# ===================================
SENTRY_DSN=sua_sentry_dsn_url

# ===================================
# LOGGING
# ===================================
LOG_LEVEL=info
LOG_FILE=/var/log/app.log

# ===================================
# CACHE
# ===================================
CACHE_DRIVER=redis
CACHE_TTL=3600

# ===================================
# SECURITY
# ===================================
ENCRYPTION_KEY=sua_encryption_key_32_chars_minimo
HASH_ALGORITHM=bcrypt
PASSWORD_MIN_LENGTH=8

# ===================================
# EXTERNAL SERVICES
# ===================================
SLACK_WEBHOOK_URL=sua_webhook_url
SLACK_BOT_TOKEN=seu_bot_token
DISCORD_WEBHOOK_URL=sua_discord_webhook
TWILIO_ACCOUNT_SID=seu_account_sid
TWILIO_AUTH_TOKEN=seu_auth_token

# ===================================
# MONITORING
# ===================================
DATADOG_API_KEY=sua_datadog_key
NEW_RELIC_LICENSE_KEY=sua_new_relic_key
PROMETHEUS_PUSHGATEWAY=localhost:9091

# ===================================
# FEATURE FLAGS
# ===================================
FEATURE_NEW_DASHBOARD=true
FEATURE_BETA_API=false
FEATURE_DARK_MODE=true

# ===================================
# DICAS DE SEGURANÇA
# ===================================
# 
# ✅ RECOMENDAÇÕES:
# - Use senhas fortes (mínimo 16 caracteres)
# - Rotação de secrets regularmente
# - Use gerenciadores de secrets (Vault, AWS Secrets Manager)
# - NUNCA envie este arquivo por email
# - Compartilhe apenas entre desenvolvedores autorizados
# - Revise regularmente quais secrets estão em uso
#
# ❌ NUNCA FAÇA:
# - Commite este arquivo .env
# - Compartilhe com pessoas externas
# - Deixe valores reais em .env.example
# - Use o mesmo secret em múltiplos ambientes
# - Armazene sem encriptação
#
# ===================================
